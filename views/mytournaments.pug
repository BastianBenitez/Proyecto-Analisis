extends layout

block content 
    h1 MIS TORNEOS
            if status
                .product-grid
                    each el in results 
                        .product
                            div
                                img(src="/img/img.jpeg", alt="img torneo 1")
                                h2 #{el.NombreTorneo}
                                p #{el.Descripcion}
                                p Inicio: #{el.fechaInicioLegible} 
                                p Termino: #{el.fechaTerminoLegible}
                            a(href="/tournament/mytournaments/"+ el.TorneoId, class="btn") Más información
            else
                h3.vacio No posee torneos inscritos
                        